
<h1>Bob's Burgers</h1>

<div class="row">
  <div class="col-md-3 col-md-offset-3">
    <h2>Burger</h2>

    <ul>
      {{#each burger}}
        {{#unless devoured}}
          <li>
            {{name}}
            <button class="eat-burger" data-id="{{id}}">Devoured!</button>
          </li>
        {{/unless}}
      {{/each}}
    </ul>
  </div>

  <div class="col-md-3">
    <h2>Burgers Eaten</h2>

    <ul>
      {{#each burger}}
        {{#if devoured}}
          <li>
            {{name}}
          </li>
        {{/if}}
      {{/each}}
    </ul>
  </div>  
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-6 center-text">
    <h2>Add a Burger</h2>
      <form class="create-form">
        <div class="form-group">
          <label for="bur">Burger Name:</label>
          <input type="text" id="bur" name="name">
        </div>
      <button type="submit">Add burger</button>
    </form>
  </div>
</div> 